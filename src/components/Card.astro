---
import Button from "./Button.astro";

interface Props {
	image: ImageMetadata;
	name: string;
	title: string;
	years: string;
	url: string;
}

const { image, name, title, years, url } = Astro.props;
---

<div
	class="flex flex-col items-center py-12 bg-black/80 rounded-lg shadow-lg text-white w-full card-animation"
>
	<div class="size-[260px] rounded-full overflow-hidden mb-4">
		<img src={image.src} alt={name} class="w-full h-full object-cover" />
	</div>
	<h3 class="text-[32px] font-medium mt-6">{name}</h3>
	<p class="text-sm text-gold mt-3.5">{title}</p>
	<p class="text-sm text-white-text mt-3.5">{years}</p>
	<div class="mt-12">
		<Button url={url} text="Investiční mince" alt="Přejít na investiční mince" />
	</div>
</div>
