---
import { Image } from "astro:assets";
import Button from "./Button.astro";

import GrahamHead from "../assets/images/Graham.png";
import GoldCoin from "../assets/images/hill.png";
import silverCoin from "../assets/images/hill-stribro.png";
import GrahamSVG from "../assets/svg/graham.svg";
import FormuleBg from "../assets/images/formule-bg-1.png";
import CartIcon from "../assets/svg/cart.svg";
---

<div class="h-screen mb-[100px] flex items-end justify-center relative">
	<Image
		src={GrahamHead}
		alt="Graham Head"
		width={GrahamHead.width}
		height={GrahamHead.height}
		class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-[25%] w-[850px] object-cover -z-[2]"
	/>
	<GrahamSVG
		class="absolute top-[12.5%] left-[45%] -translate-x-1/2 w-[100%] object-cover -z-[3]"
	/>
	<Image
		src={FormuleBg}
		alt="Formule Background"
		width={FormuleBg.width}
		height={FormuleBg.height}
		class="absolute top-[37.5%] -left-[20%] w-[100%] object-cover -z-[1] formula-bg"
		id="formulaBg"
	/>
	<div class="container-big flex justify-between mb-10">
		<div class="flex flex-col gap-24">
			<h1 class="text-[68px] max-w-[750px] font-medium leading-[125%] split-text">
				Unikátní investiční mince s motivy mistrů světa <span class="text-gold">Formule 1.</span>
			</h1>
			<div class="flex gap-[38px]">
				<Button text="Zjistit více" url="/" />
				<a class="flex items-center gap-3 cursor-pointer" href="/">
					<CartIcon class="h-4 w-4" />
					<p class="text-gold whitespace-nowrap">Koupit v e-shopu</p>
				</a>
			</div>
		</div>
		<div class="relative">
			<Image
				src={GoldCoin}
				alt="Gold Coin"
				width={GoldCoin.width}
				height={GoldCoin.height}
				class="size-[520px] object-cover"
				id="goldCoin"
			/>
			<Image
				src={silverCoin}
				alt="Silver Coin"
				width={silverCoin.width}
				height={silverCoin.height}
				class="absolute size-[265px] object-cover z-[2] -left-[30%] bottom-0"
				id="silverCoin"
			/>
		</div>
	</div>
</div>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const silverCoin = document.getElementById("silverCoin");
		const goldCoin = document.getElementById("goldCoin");

		if (silverCoin && goldCoin) {
			// Maximum movement in pixels - different for each coin
			const maxMovementSilver = 30; // More movement for the smaller silver coin
			const maxMovementGold = 10; // Less movement for the larger gold coin

			document.addEventListener("mousemove", (e) => {
				// Calculate mouse position as percentage of window
				const mouseX = e.clientX / window.innerWidth;
				const mouseY = e.clientY / window.innerHeight;

				// Calculate offset for silver coin (more movement)
				const offsetSilverX = (mouseX - 0.5) * maxMovementSilver;
				const offsetSilverY = (mouseY - 0.5) * maxMovementSilver;

				// Calculate offset for gold coin (less movement)
				const offsetGoldX = (mouseX - 0.5) * maxMovementGold;
				const offsetGoldY = (mouseY - 0.5) * maxMovementGold;

				// Apply smooth transform to the silver coin
				silverCoin.style.transform = `translate(${offsetSilverX}px, ${offsetSilverY}px)`;
				silverCoin.style.transition = "transform 0.3s ease-out";

				// Apply smooth transform to the gold coin
				goldCoin.style.transform = `translate(${offsetGoldX}px, ${offsetGoldY}px)`;
				goldCoin.style.transition = "transform 0.4s ease-out";
			});
		}
	});
</script>
